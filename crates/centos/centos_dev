
echo -e "\n~~~ Installing CentOS dev packages  ~~~\n"
yum install -y \
    cmake3
    devtoolset-7-gcc-c++
    devtoolset-7-gdb
    llvm-toolset-7-clang
    llvm-toolset-7-clang-tools-extra
    python36
    python36-pip
    python36-setuptools
    rh-git29-git

echo -e "\n~~~ Activate SCL packages  ~~~\n"
cat <<EOF> /etc/profile.d/scl_enable.sh
#!/bin/bash
source scl_source enable rh-git29
EOF

